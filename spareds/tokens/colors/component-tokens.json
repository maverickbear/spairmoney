{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Component Tokens - Component-Specific Color Tokens",
  "description": "Level 4: Component tokens - colors applied to specific UI components",
  "type": "object",
  "properties": {
    "button": {
      "description": "Button component tokens",
      "type": "object",
      "properties": {
        "primary": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.primary}", "description": "Primary button background" },
            "bg-hover": { "value": "{color.semantic.primary-hover}", "description": "Primary button hover background" },
            "bg-active": { "value": "{color.semantic.primary-active}", "description": "Primary button active background" },
            "text": { "value": "{color.text.inverse}", "description": "Primary button text" },
            "text-dark": { "value": "{color.text.inverse-dark}", "description": "Primary button text (dark mode)" },
            "border": { "value": "{color.semantic.primary}", "description": "Primary button border" },
            "ring": { "value": "{color.ring.default}", "description": "Primary button focus ring" }
          }
        },
        "secondary": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.bg.tertiary}", "description": "Secondary button background (light mode)" },
            "bg-dark": { "value": "{color.bg.tertiary-dark}", "description": "Secondary button background (dark mode)" },
            "bg-hover": { "value": "{color.bg.hover}", "description": "Secondary button hover background (light mode)" },
            "bg-hover-dark": { "value": "{color.bg.hover-dark}", "description": "Secondary button hover background (dark mode)" },
            "text": { "value": "{color.text.primary}", "description": "Secondary button text (light mode)" },
            "text-dark": { "value": "{color.text.primary-dark}", "description": "Secondary button text (dark mode)" },
            "border": { "value": "{color.border.default}", "description": "Secondary button border (light mode)" },
            "border-dark": { "value": "{color.border.default-dark}", "description": "Secondary button border (dark mode)" }
          }
        },
        "destructive": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.error}", "description": "Destructive button background" },
            "bg-hover": { "value": "{color.semantic.error-dark}", "description": "Destructive button hover background" },
            "text": { "value": "{color.text.inverse}", "description": "Destructive button text" },
            "text-dark": { "value": "{color.text.inverse-dark}", "description": "Destructive button text (dark mode)" },
            "border": { "value": "{color.semantic.error}", "description": "Destructive button border" },
            "ring": { "value": "{color.ring.error}", "description": "Destructive button focus ring" }
          }
        },
        "outline": {
          "type": "object",
          "properties": {
            "bg": { "value": "transparent", "description": "Outline button background" },
            "bg-hover": { "value": "{color.bg.hover}", "description": "Outline button hover background (light mode)" },
            "bg-hover-dark": { "value": "{color.bg.hover-dark}", "description": "Outline button hover background (dark mode)" },
            "text": { "value": "{color.semantic.primary}", "description": "Outline button text" },
            "border": { "value": "{color.semantic.primary}", "description": "Outline button border" },
            "border-hover": { "value": "{color.semantic.primary-hover}", "description": "Outline button hover border" }
          }
        },
        "ghost": {
          "type": "object",
          "properties": {
            "bg": { "value": "transparent", "description": "Ghost button background" },
            "bg-hover": { "value": "{color.bg.hover}", "description": "Ghost button hover background (light mode)" },
            "bg-hover-dark": { "value": "{color.bg.hover-dark}", "description": "Ghost button hover background (dark mode)" },
            "text": { "value": "{color.text.primary}", "description": "Ghost button text (light mode)" },
            "text-dark": { "value": "{color.text.primary-dark}", "description": "Ghost button text (dark mode)" }
          }
        },
        "link": {
          "type": "object",
          "properties": {
            "text": { "value": "{color.semantic.primary}", "description": "Link button text" },
            "text-hover": { "value": "{color.semantic.primary-hover}", "description": "Link button hover text" },
            "underline": { "value": "{color.semantic.primary}", "description": "Link button underline" }
          }
        }
      }
    },
    "card": {
      "description": "Card component tokens",
      "type": "object",
      "properties": {
        "bg": { "value": "{color.card.bg}", "description": "Card background (light mode)" },
        "bg-dark": { "value": "{color.card.bg-dark}", "description": "Card background (dark mode)" },
        "border": { "value": "{color.card.border}", "description": "Card border (light mode)" },
        "border-dark": { "value": "{color.card.border-dark}", "description": "Card border (dark mode)" },
        "fg": { "value": "{color.card.fg}", "description": "Card foreground (light mode)" },
        "fg-dark": { "value": "{color.card.fg-dark}", "description": "Card foreground (dark mode)" }
      }
    },
    "input": {
      "description": "Input component tokens",
      "type": "object",
      "properties": {
        "bg": { "value": "{color.input.bg}", "description": "Input background (light mode)" },
        "bg-dark": { "value": "{color.input.bg-dark}", "description": "Input background (dark mode)" },
        "bg-disabled": { "value": "{color.bg.muted}", "description": "Input disabled background (light mode)" },
        "bg-disabled-dark": { "value": "{color.bg.muted-dark}", "description": "Input disabled background (dark mode)" },
        "border": { "value": "{color.input.border}", "description": "Input border (light mode)" },
        "border-dark": { "value": "{color.input.border-dark}", "description": "Input border (dark mode)" },
        "border-hover": { "value": "{color.border.hover}", "description": "Input hover border (light mode)" },
        "border-hover-dark": { "value": "{color.border.hover-dark}", "description": "Input hover border (dark mode)" },
        "border-focus": { "value": "{color.input.border-focus}", "description": "Input focus border" },
        "border-error": { "value": "{color.border.error}", "description": "Input error border" },
        "text": { "value": "{color.input.text}", "description": "Input text (light mode)" },
        "text-dark": { "value": "{color.input.text-dark}", "description": "Input text (dark mode)" },
        "text-disabled": { "value": "{color.text.disabled}", "description": "Input disabled text (light mode)" },
        "text-disabled-dark": { "value": "{color.text.disabled-dark}", "description": "Input disabled text (dark mode)" },
        "placeholder": { "value": "{color.input.placeholder}", "description": "Input placeholder (light mode)" },
        "placeholder-dark": { "value": "{color.input.placeholder-dark}", "description": "Input placeholder (dark mode)" }
      }
    },
    "label": {
      "description": "Label component tokens",
      "type": "object",
      "properties": {
        "text": { "value": "{color.text.primary}", "description": "Label text (light mode)" },
        "text-dark": { "value": "{color.text.primary-dark}", "description": "Label text (dark mode)" },
        "text-required": { "value": "{color.semantic.error}", "description": "Required label indicator" },
        "text-optional": { "value": "{color.text.secondary}", "description": "Optional label text (light mode)" },
        "text-optional-dark": { "value": "{color.text.secondary-dark}", "description": "Optional label text (dark mode)" }
      }
    },
    "popover": {
      "description": "Popover component tokens",
      "type": "object",
      "properties": {
        "bg": { "value": "{color.popover.bg}", "description": "Popover background (light mode)" },
