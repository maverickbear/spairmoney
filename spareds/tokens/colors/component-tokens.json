        "success": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.success-light}", "description": "Success badge background" },
            "text": { "value": "{color.semantic.success}", "description": "Success badge text" }
          }
        },
        "error": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.error-light}", "description": "Error badge background" },
            "text": { "value": "{color.semantic.error}", "description": "Error badge text" }
          }
        },
        "warning": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.warning-light}", "description": "Warning badge background" },
            "text": { "value": "{color.semantic.warning}", "description": "Warning badge text" }
          }
        },
        "info": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.info-light}", "description": "Info badge background" },
            "text": { "value": "{color.semantic.info}", "description": "Info badge text" }
          }
        }
      }
    },
    "alert": {
      "description": "Alert component tokens",
      "type": "object",
      "properties": {
        "success": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.success-light}", "description": "Success alert background" },
            "border": { "value": "{color.border.success}", "description": "Success alert border" },
            "text": { "value": "{color.semantic.success}", "description": "Success alert text" }
          }
        },
        "error": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.error-light}", "description": "Error alert background" },
            "border": { "value": "{color.border.error}", "description": "Error alert border" },
            "text": { "value": "{color.semantic.error}", "description": "Error alert text" }
          }
        },
        "warning": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.warning-light}", "description": "Warning alert background" },
            "border": { "value": "{color.semantic.warning}", "description": "Warning alert border" },
            "text": { "value": "{color.semantic.warning}", "description": "Warning alert text" }
          }
        },
        "info": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.info-light}", "description": "Info alert background" },
            "border": { "value": "{color.semantic.info}", "description": "Info alert border" },
            "text": { "value": "{color.semantic.info}", "description": "Info alert text" }
          }
        }
      }
    },
    "chart": {
      "description": "Chart component tokens",
      "type": "object",
      "properties": {
        "income": { "value": "{color.chart.income}", "description": "Income chart color" },
        "income-light": { "value": "{color.chart.income-light}", "description": "Income chart light color" },
        "expenses": { "value": "{color.chart.expenses}", "description": "Expenses chart color" },
        "expenses-light": { "value": "{color.chart.expenses-light}", "description": "Expenses chart light color" },
        "assets": { "value": "{color.chart.assets}", "description": "Assets chart color" },
        "debts": { "value": "{color.chart.debts}", "description": "Debts chart color" },
        "health-score-start": { "value": "{color.chart.health-score-start}", "description": "Health score gradient start" },
        "health-score-mid": { "value": "{color.chart.health-score-mid}", "description": "Health score gradient mid" },
        "health-score-end": { "value": "{color.chart.health-score-end}", "description": "Health score gradient end" },
        "default": { "value": "{color.chart.default}", "description": "Default chart color" }
      }
    },
    "navigation": {
      "description": "Navigation component tokens",
      "type": "object",
      "properties": {
        "bg": { "value": "{color.bg.primary}", "description": "Navigation background (light mode)" },
        "bg-dark": { "value": "{color.bg.primary-dark}", "description": "Navigation background (dark mode)" },
        "border": { "value": "{color.border.default}", "description": "Navigation border (light mode)" },
        "border-dark": { "value": "{color.border.default-dark}", "description": "Navigation border (dark mode)" },
        "link": { "value": "{color.text.secondary}", "description": "Navigation link (light mode)" },
        "link-dark": { "value": "{color.text.secondary-dark}", "description": "Navigation link (dark mode)" },
        "link-active": { "value": "{color.semantic.primary}", "description": "Navigation active link" },
        "link-hover": { "value": "{color.semantic.primary-hover}", "description": "Navigation hover link" }
      }
    },
    "hero": {
      "description": "Hero section component tokens",
      "type": "object",
      "properties": {
        "gradient-start": { "value": "{default-values.gradients.hero-start}", "description": "Hero gradient start" },
        "gradient-mid": { "value": "{default-values.gradients.hero-mid}", "description": "Hero gradient mid" },
        "gradient-end": { "value": "{default-values.gradients.hero-end}", "description": "Hero gradient end" },
        "gradient-start-dark": { "value": "{default-values.gradients.hero-dark-start}", "description": "Hero gradient start (dark mode)" },
        "gradient-mid-dark": { "value": "{default-values.gradients.hero-dark-mid}", "description": "Hero gradient mid (dark mode)" },
        "gradient-end-dark": { "value": "{default-values.gradients.hero-dark-end}", "description": "Hero gradient end (dark mode)" },
        "text": { "value": "#ffffff", "description": "Hero text color" },
        "button-bg": { "value": "#ffffff", "description": "Hero button background" },
        "button-text": { "value": "{default-values.primary.blue-700}", "description": "Hero button text" }
      }
    },
    "landing": {
      "description": "Landing page component tokens",
      "type": "object",
      "properties": {
        "gradient-dark-start": { "value": "{default-values.gradients.landing-dark-start}", "description": "Landing gradient dark start" },
        "gradient-dark-mid": { "value": "{default-values.gradients.landing-dark-mid}", "description": "Landing gradient dark mid" },
        "gradient-dark-end": { "value": "{default-values.gradients.landing-dark-end}", "description": "Landing gradient dark end" },
        "gradient-light-start": { "value": "{default-values.gradients.landing-light-start}", "description": "Landing gradient light start" },
        "gradient-light-end": { "value": "{default-values.gradients.landing-light-end}", "description": "Landing gradient light end" }
