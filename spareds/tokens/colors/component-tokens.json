    "tooltip": {
      "description": "Tooltip component tokens",
      "type": "object",
      "properties": {
        "bg": { "value": "{color.gray.500}", "description": "Tooltip background (light mode)" },
        "bg-dark": { "value": "{color.gray.300}", "description": "Tooltip background (dark mode)" },
        "text": { "value": "{color.text.inverse}", "description": "Tooltip text (light mode)" },
        "text-dark": { "value": "{color.text.inverse-dark}", "description": "Tooltip text (dark mode)" }
      }
    },
    "badge": {
      "description": "Badge component tokens",
      "type": "object",
      "properties": {
        "primary": {
          "type": "object",
          "properties": {
            "bg": { "value": "{color.semantic.primary-light}", "description": "Primary badge background" },
            "text": { "value": "{color.semantic.primary}", "description": "Primary badge text" }
          }
