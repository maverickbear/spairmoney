{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Foundation Tokens - Primitive Color Tokens",
  "description": "Level 2: Foundation tokens - primitive color scales organized by color family",
  "type": "object",
  "properties": {
    "color": {
      "type": "object",
      "properties": {
        "primary": {
          "description": "Primary brand color scale",
          "type": "object",
          "properties": {
            "900": { "value": "{default-values.primary.blue-900}", "description": "Primary darkest" },
            "800": { "value": "{default-values.primary.blue-800}", "description": "Primary dark" },
            "700": { "value": "{default-values.primary.blue-700}", "description": "Primary dark" },
            "600": { "value": "{default-values.primary.blue-600}", "description": "Primary medium" },
            "500": { "value": "{default-values.primary.blue-500}", "description": "Primary base" },
            "400": { "value": "{default-values.primary.blue-400}", "description": "Primary light" },
            "300": { "value": "{default-values.primary.blue-300}", "description": "Primary lighter" }
          }
        },
        "gray": {
          "description": "Gray scale",
          "type": "object",
          "properties": {
            "50": { "value": "{default-values.gray.gray-50}", "description": "Gray 50" },
            "100": { "value": "{default-values.gray.gray-100}", "description": "Gray 100" },
            "200": { "value": "{default-values.gray.gray-200}", "description": "Gray 200" },
            "300": { "value": "{default-values.gray.gray-300}", "description": "Gray 300" },
            "400": { "value": "{default-values.gray.gray-400}", "description": "Gray 400" },
            "500": { "value": "{default-values.gray.gray-500}", "description": "Gray 500" }
          }
        },
        "blue": {
          "description": "Blue color scale",
          "type": "object",
          "properties": {
            "500": { "value": "{default-values.blue.blue-500}", "description": "Blue 500" },
            "400": { "value": "{default-values.blue.blue-400}", "description": "Blue 400 (Sky)" },
            "600": { "value": "{default-values.blue.blue-600}", "description": "Blue 600 (Indigo)" }
          }
        },
        "green": {
          "description": "Green color scale",
          "type": "object",
          "properties": {
            "700": { "value": "{default-values.green.green-700}", "description": "Green 700 (Teal)" },
            "600": { "value": "{default-values.green.green-600}", "description": "Green 600" },
            "500": { "value": "{default-values.green.green-500}", "description": "Green 500" },
            "400": { "value": "{default-values.green.green-400}", "description": "Green 400 (Emerald)" },
            "300": { "value": "{default-values.green.green-300}", "description": "Green 300" },
            "200": { "value": "{default-values.green.green-200}", "description": "Green 200" }
          }
        },
        "red": {
          "description": "Red color scale",
          "type": "object",
          "properties": {
            "600": { "value": "{default-values.red.red-600}", "description": "Red 600 (Rose)" },
            "500": { "value": "{default-values.red.red-500}", "description": "Red 500" },
            "400": { "value": "{default-values.red.red-400}", "description": "Red 400" },
            "300": { "value": "{default-values.red.red-300}", "description": "Red 300" }
          }
        },
        "amber": {
          "description": "Amber/Yellow color scale",
          "type": "object",
          "properties": {
            "600": { "value": "{default-values.amber.amber-600}", "description": "Amber 600" },
            "500": { "value": "{default-values.amber.amber-500}", "description": "Amber 500" },
            "400": { "value": "{default-values.amber.amber-400}", "description": "Amber 400 (Yellow)" }
          }
        },
        "orange": {
          "description": "Orange color scale",
          "type": "object",
          "properties": {
            "500": { "value": "{default-values.orange.orange-500}", "description": "Orange 500" }
          }
        },
        "purple": {
          "description": "Purple/Violet color scale",
          "type": "object",
          "properties": {
            "500": { "value": "{default-values.purple.purple-500}", "description": "Purple 500" },
            "400": { "value": "{default-values.purple.purple-400}", "description": "Purple 400 (Violet)" }
          }
        },
        "pink": {
          "description": "Pink color scale",
          "type": "object",
          "properties": {
            "500": { "value": "{default-values.pink.pink-500}", "description": "Pink 500" }
          }
        },
        "cyan": {
          "description": "Cyan color scale",
          "type": "object",
          "properties": {
            "500": { "value": "{default-values.cyan.cyan-500}", "description": "Cyan 500" }
          }
        },
        "lime": {
          "description": "Lime color scale",
          "type": "object",
          "properties": {
            "500": { "value": "{default-values.lime.lime-500}", "description": "Lime 500" }
          }
        }
      }
    }
  }
}

