{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Semantic Tokens - Purpose-Driven Color Tokens",
  "description": "Level 3: Semantic tokens - colors organized by purpose and meaning",
  "type": "object",
  "properties": {
    "color": {
      "type": "object",
      "properties": {
        "semantic": {
          "description": "Semantic color meanings",
          "type": "object",
          "properties": {
            "primary": { "value": "{color.primary.500}", "description": "Primary brand color" },
            "primary-hover": { "value": "{color.primary.600}", "description": "Primary hover state" },
            "primary-active": { "value": "{color.primary.700}", "description": "Primary active state" },
            "primary-light": { "value": "{color.primary.400}", "description": "Primary light variant" },
            "primary-lighter": { "value": "{color.primary.300}", "description": "Primary lighter variant" },
            "primary-dark": { "value": "{color.primary.800}", "description": "Primary dark variant" },
            "primary-darker": { "value": "{color.primary.900}", "description": "Primary darkest variant" },
            "success": { "value": "{color.green.500}", "description": "Success state color" },
            "success-light": { "value": "{color.green.400}", "description": "Success light variant" },
            "success-dark": { "value": "{color.green.600}", "description": "Success dark variant" },
            "error": { "value": "{color.red.500}", "description": "Error/destructive color" },
            "error-light": { "value": "{color.red.400}", "description": "Error light variant" },
            "error-dark": { "value": "{color.red.600}", "description": "Error dark variant" },
            "warning": { "value": "{color.amber.500}", "description": "Warning state color" },
            "warning-light": { "value": "{color.amber.400}", "description": "Warning light variant" },
            "warning-dark": { "value": "{color.amber.600}", "description": "Warning dark variant" },
            "info": { "value": "{color.blue.500}", "description": "Info state color" },
            "info-light": { "value": "{color.blue.400}", "description": "Info light variant" },
            "info-dark": { "value": "{color.blue.600}", "description": "Info dark variant" }
          }
        },
        "text": {
          "description": "Text color tokens",
          "type": "object",
          "properties": {
            "primary": { "value": "{color.gray.500}", "description": "Primary text color (light mode)" },
            "primary-dark": { "value": "{color.gray.50}", "description": "Primary text color (dark mode)" },
            "secondary": { "value": "{color.gray.400}", "description": "Secondary text color (light mode)" },
            "secondary-dark": { "value": "{color.gray.200}", "description": "Secondary text color (dark mode)" },
            "tertiary": { "value": "{color.gray.300}", "description": "Tertiary text color (light mode)" },
            "tertiary-dark": { "value": "{color.gray.300}", "description": "Tertiary text color (dark mode)" },
            "disabled": { "value": "{color.gray.200}", "description": "Disabled text color (light mode)" },
            "disabled-dark": { "value": "{color.gray.400}", "description": "Disabled text color (dark mode)" },
            "inverse": { "value": "{color.gray.50}", "description": "Inverse text color (for dark backgrounds)" },
            "inverse-dark": { "value": "{color.gray.500}", "description": "Inverse text color (for light backgrounds)" }
          }
        },
        "fg": {
          "description": "Foreground color tokens",
          "type": "object",
          "properties": {
            "primary": { "value": "{color.gray.500}", "description": "Primary foreground (light mode)" },
            "primary-dark": { "value": "{color.gray.50}", "description": "Primary foreground (dark mode)" },
            "secondary": { "value": "{color.gray.400}", "description": "Secondary foreground (light mode)" },
            "secondary-dark": { "value": "{color.gray.200}", "description": "Secondary foreground (dark mode)" },
            "muted": { "value": "{color.gray.300}", "description": "Muted foreground (light mode)" },
            "muted-dark": { "value": "{color.gray.300}", "description": "Muted foreground (dark mode)" }
          }
        },
        "bg": {
          "description": "Background color tokens",
          "type": "object",
          "properties": {
            "primary": { "value": "{color.gray.50}", "description": "Primary background (light mode)" },
            "primary-dark": { "value": "{color.gray.500}", "description": "Primary background (dark mode)" },
            "secondary": { "value": "#ffffff", "description": "Secondary background (light mode)" },
            "secondary-dark": { "value": "{color.gray.400}", "description": "Secondary background (dark mode)" },
            "tertiary": { "value": "{color.gray.100}", "description": "Tertiary background (light mode)" },
            "tertiary-dark": { "value": "{color.gray.300}", "description": "Tertiary background (dark mode)" },
            "muted": { "value": "{color.gray.100}", "description": "Muted background (light mode)" },
            "muted-dark": { "value": "{color.gray.400}", "description": "Muted background (dark mode)" },
            "hover": { "value": "{color.gray.100}", "description": "Hover background (light mode)" },
            "hover-dark": { "value": "{color.gray.300}", "description": "Hover background (dark mode)" },
            "active": { "value": "{color.gray.200}", "description": "Active background (light mode)" },
            "active-dark": { "value": "{color.gray.200}", "description": "Active background (dark mode)" }
          }
        },
        "border": {
          "description": "Border color tokens",
          "type": "object",
          "properties": {
            "default": { "value": "{color.gray.200}", "description": "Default border (light mode)" },
            "default-dark": { "value": "{color.gray.300}", "description": "Default border (dark mode)" },
            "hover": { "value": "{color.gray.300}", "description": "Hover border (light mode)" },
            "hover-dark": { "value": "{color.gray.400}", "description": "Hover border (dark mode)" },
            "focus": { "value": "{color.primary.500}", "description": "Focus border" },
            "error": { "value": "{color.red.500}", "description": "Error border" },
            "success": { "value": "{color.green.500}", "description": "Success border" }
          }
        },
        "input": {
          "description": "Input color tokens",
          "type": "object",
          "properties": {
            "bg": { "value": "{color.gray.50}", "description": "Input background (light mode)" },
            "bg-dark": { "value": "{color.gray.400}", "description": "Input background (dark mode)" },
            "border": { "value": "{color.gray.200}", "description": "Input border (light mode)" },
            "border-dark": { "value": "{color.gray.300}", "description": "Input border (dark mode)" },
            "border-focus": { "value": "{color.primary.500}", "description": "Input focus border" },
            "text": { "value": "{color.gray.500}", "description": "Input text (light mode)" },
            "text-dark": { "value": "{color.gray.50}", "description": "Input text (dark mode)" },
            "placeholder": { "value": "{color.gray.300}", "description": "Input placeholder (light mode)" },
            "placeholder-dark": { "value": "{color.gray.300}", "description": "Input placeholder (dark mode)" }
          }
        },
        "card": {
          "description": "Card color tokens",
          "type": "object",
          "properties": {
            "bg": { "value": "#ffffff", "description": "Card background (light mode)" },
            "bg-dark": { "value": "{color.gray.400}", "description": "Card background (dark mode)" },
            "border": { "value": "{color.gray.200}", "description": "Card border (light mode)" },
            "border-dark": { "value": "{color.gray.300}", "description": "Card border (dark mode)" },
            "fg": { "value": "{color.gray.500}", "description": "Card foreground (light mode)" },
            "fg-dark": { "value": "{color.gray.50}", "description": "Card foreground (dark mode)" }
          }
        },
        "popover": {
          "description": "Popover color tokens",
          "type": "object",
          "properties": {
            "bg": { "value": "#ffffff", "description": "Popover background (light mode)" },
            "bg-dark": { "value": "{color.gray.400}", "description": "Popover background (dark mode)" },
            "fg": { "value": "{color.gray.500}", "description": "Popover foreground (light mode)" },
            "fg-dark": { "value": "{color.gray.50}", "description": "Popover foreground (dark mode)" },
            "border": { "value": "{color.gray.200}", "description": "Popover border (light mode)" },
            "border-dark": { "value": "{color.gray.300}", "description": "Popover border (dark mode)" }
          }
        },
        "ring": {
          "description": "Ring/focus ring color tokens",
          "type": "object",
          "properties": {
            "default": { "value": "{color.primary.500}", "description": "Default focus ring" },
            "default-dark": { "value": "{color.primary.400}", "description": "Default focus ring (dark mode)" },
            "error": { "value": "{color.red.500}", "description": "Error focus ring" },
            "success": { "value": "{color.green.500}", "description": "Success focus ring" }
          }
        },
        "chart": {
          "description": "Chart-specific color tokens",
          "type": "object",
          "properties": {
            "income": { "value": "{default-values.charts.income-primary}", "description": "Income chart color" },
            "income-light": { "value": "{default-values.charts.income-light}", "description": "Income chart light color" },
            "expenses": { "value": "{default-values.charts.expenses-primary}", "description": "Expenses chart color" },
            "expenses-light": { "value": "{default-values.charts.expenses-light}", "description": "Expenses chart light color" },
            "assets": { "value": "{default-values.charts.assets}", "description": "Assets color" },
            "debts": { "value": "{default-values.charts.debts}", "description": "Debts color" },
            "health-score-start": { "value": "{default-values.charts.health-score-start}", "description": "Health score gradient start" },
            "health-score-mid": { "value": "{default-values.charts.health-score-mid}", "description": "Health score gradient mid" },
            "health-score-end": { "value": "{default-values.charts.health-score-end}", "description": "Health score gradient end" },
            "default": { "value": "{default-values.charts.chart-blue}", "description": "Default chart color" }
          }
        },
        "category": {
          "description": "Category color tokens for transactions",
          "type": "object",
          "properties": {
            "blue": { "value": "{color.blue.500}", "description": "Category blue" },
            "green": { "value": "{color.green.500}", "description": "Category green" },
            "emerald": { "value": "{color.green.400}", "description": "Category emerald" },
            "amber": { "value": "{color.amber.500}", "description": "Category amber" },
            "red": { "value": "{color.red.500}", "description": "Category red" },
            "purple": { "value": "{color.purple.500}", "description": "Category purple" },
            "cyan": { "value": "{color.cyan.500}", "description": "Category cyan" },
            "orange": { "value": "{color.orange.500}", "description": "Category orange" },
            "pink": { "value": "{color.pink.500}", "description": "Category pink" },
            "teal": { "value": "{color.green.700}", "description": "Category teal" },
            "indigo": { "value": "{color.blue.600}", "description": "Category indigo" },
            "violet": { "value": "{color.purple.400}", "description": "Category violet" },
            "lime": { "value": "{color.lime.500}", "description": "Category lime" },
            "rose": { "value": "{color.red.600}", "description": "Category rose" },
            "sky": { "value": "{color.blue.400}", "description": "Category sky" },
            "yellow": { "value": "{color.amber.400}", "description": "Category yellow" },
            "gray": { "value": "{color.gray.300}", "description": "Category gray" }
          }
        }
      }
    }
  }
}

